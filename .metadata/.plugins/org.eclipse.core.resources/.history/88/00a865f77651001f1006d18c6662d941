package multipleObject;

public class BankDetails {
	
	int bal= 1000;
	
	void debit() {
		bal=bal+1000;
	}
	
	void credit() {
		bal =bal -500;
	}
	
	void display() {
		System.out.println("Your current balance is" + bal);
	}

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		BankDetails bankDetails = new BankDetails();
		bankDetails.debit();
		bankDetails.display();
		bankDetails.credit();
		bankDetails.display();

	}

}
